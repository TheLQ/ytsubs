{
  "compilerOptions": {
    // this aligns with Vue's browser support
    "target": "es2018",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    // tree shaking
    "module": "es6",
    "moduleResolution": "node",

    "outDir": "./dist/jscli",
    "sourceMap": true,
    "noImplicitAny": true,

    "esModuleInterop": true
  },
  "include": ["./src/**/*", "./src/**/*.vue"]
}
