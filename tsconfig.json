{
  "compilerOptions": {
    // this aligns with Vue's browser support
    "target": "es2020",
    "module": "esnext",

    // this enables stricter inference for data properties on `this`
    "strict": true,

    "moduleResolution": "node",

    "outDir": "./dist/serverts",
    "sourceMap": true,
    "noImplicitAny": true,

    "esModuleInterop": true
  },
  // "include": ["./src/**/*", "./src/**/*.vue"]
  "include": ["src/server"]
}
